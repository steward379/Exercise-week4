void setup()
{
  size(480,480);
}

float angle = 0.0;

void draw(){
  background(255);
  
  for (int i =0 ; i <10; i++){
  fill(0,255,0);
  rect(i*40+40, 0, 40, 150 + sin(angle)*30);
  rect(i*40+40, height, 40, sin(angle)*30 - 150);
 
  angle += 0.625;  
  }
} 

